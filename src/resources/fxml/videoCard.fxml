<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<fx:root contentDisplay="TOP" mnemonicParsing="false" onAction="#launchVideo" stylesheets="@../css/iconButton.css" type="Button" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <graphic>
      <StackPane>
         <children>
            <ImageView fx:id="thumbnail" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER" />
            <Label fx:id="name" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-color: rgba(0,0,0,0.4);" text="name" textFill="WHITE" StackPane.alignment="BOTTOM_CENTER">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
      </StackPane>
   </graphic>
</fx:root>
